<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <EditText
        android:padding="5dp"
        android:background="@drawable/calculator_button"
        android:id="@+id/category_name_edittext"
        android:maxLines="1"
        android:inputType="text"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Category Name"/>
    <EditText
        android:id="@+id/budget_editext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter budget"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/calculator_button"
        android:layout_below="@id/category_name_edittext"
        />
    <Spinner
        android:layout_marginTop="5dp"
        android:id="@+id/category_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/budget_editext"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/choose_image_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Category Icon"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/category_type_spinner"/>
    <GridView
        android:padding="5dp"
        android:background="@drawable/calculator_button"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_images_gridview"
        android:layout_below="@+id/choose_image_text"
        android:numColumns="auto_fit"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="10dp"
        android:columnWidth="60dp"
        android:stretchMode="spacingWidthUniform"/>
    <!--<android.support.v7.widget.RecyclerView-->
         <!--android:id="@+id/addcategory_recyclerview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/choose_image_text"-->
        <!--android:padding="5dp"/>-->

</RelativeLayout>